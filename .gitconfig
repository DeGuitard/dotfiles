	name = Vianney Dupoy de Guitard
	email = vianney@n4v1.com

[alias]
	lg = log --pretty=oneline --graph --abbrev-commit
	st = status -s
	co = "!f() { git checkout -b \"$1\" 2> /dev/null || git checkout \"$1\"; }; f"
	cm = commit
	tags = tag -l
	branches = branch -a
	remotes = remote -v
	reb = "!r() { git rebase -i HEAD~$1; }; r"

[help]
	autocorrect = 1

[push]
	default = simple
	followTags = true

[core]
	pager = diff-so-fancy | less --tabs=4 -RFX

[color]
	ui = true

[color "diff"]
	meta = "yellow"
	frag = "magenta bold"
	commit = "yellow bold"
	old = "red bold"
	new = "green bold"
	whitespace = "red reverse"
